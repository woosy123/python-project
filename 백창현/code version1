import tkinter as tk
from tkinter import messagebox

questions = [
    "당신은 '요즘애들'이라는 말을 자주 사용하나요?",
    "당신은 회의시간에 후배가 내 의견을 반대한다면 그 것을 담아두는 편인가요?",
    "당신은 후배가 나보다 출근을 늦게 한다면 눈치를 주는 편인가요 ?",
    "당신은 나보다 어린 사람의 사생활에 대해 인생선배로써 조언해줄 수 있다고 생각하나 ?",
    "당신은 잡일은 막내가 해야 한다고 생각하시나요?"
]

def show_result(score):
    if score >= 3:
        messagebox.showinfo("결과", "당신은 꼰대입니다!")
    else:
        messagebox.showinfo("결과", "당신은 꼰대가 아닙니다.")

def calculate_score():
    score = 0
    for i in range(len(questions)):
        if answer_vars[i].get() == 1:
            score += 1

    show_result(score)


window = tk.Tk()
window.title("꼰대 테스트")

answer_vars = []
for i, question in enumerate(questions):
    question_label = tk.Label(window, text=question, font=("Arial", 12))
    question_label.pack(pady=10)

    answer_var = tk.IntVar()
    answer_vars.append(answer_var)

    frame = tk.Frame(window)
    frame.pack()

    yes_button = tk.Radiobutton(frame, text="예", variable=answer_var, value=1, font=("Arial", 12))
    yes_button.pack(side=tk.LEFT, padx=10)

    no_button = tk.Radiobutton(frame, text="아니오", variable=answer_var, value=0, font=("Arial", 12))
    no_button.pack(side=tk.LEFT, padx=10)

result_button = tk.Button(window, text="결과 보기", command=calculate_score, font=("Arial", 14), bg="#FFD700", fg="white")
result_button.pack(pady=20)

window.mainloop()


